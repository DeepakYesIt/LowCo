        android:height="@dimen/_130sdp"
        android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#1CEB7E1F"/>
             <!-- Green color -->
        </shape>
    </item>

    <!-- Red Oval -->
    <item
        android:width="@dimen/_90sdp"
        android:height="@dimen/_90sdp"
        android:gravity="center">
