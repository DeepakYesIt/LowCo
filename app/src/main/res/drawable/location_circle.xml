    </item>

    <!-- Blue Oval -->
    <item
        android:width="@dimen/_65sdp"
        android:height="@dimen/_65sdp"
        android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#D7450E"/> <!-- Blue color -->
        </shape>
    </item>
