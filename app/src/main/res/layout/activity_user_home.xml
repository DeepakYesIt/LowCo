<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activity.consumer.ConsumerHomeActivity">
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentUserContainerView_ConsumerMain"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:navGraph="@navigation/consumer_nav"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lay1"/>
    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="@color/orange_dark"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:id="@+id/csnavigationHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:gravity="center">

            <ImageView
                android:id="@+id/csimageHome"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/home_bottom" />

            <TextView
                android:id="@+id/cstvhome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/csimageHome"
                android:layout_marginTop="1dp"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_11ssp"
                android:gravity="center"
                android:text="Home"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/csnavigationconnection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/csimageconnection"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/connections_navigation" />

            <TextView
                android:id="@+id/cstvconnections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/csimageconnection"
                android:layout_marginTop="1dp"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:text="Connections"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/csnavigationSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/csimageSettings"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/setting_bottom" />

            <TextView
                android:id="@+id/cstvsetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/csimageSettings"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:textSize="14sp"
                android:text="Settings"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/csnavigationProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:gravity="center">

            <ImageView
                android:id="@+id/csimageProfile"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/profile_bottom" />

            <TextView
                android:id="@+id/cstvProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/csimageProfile"
                android:layout_marginTop="1dp"
                android:textSize="@dimen/_11ssp"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:text="Profile"
                android:textColor="@color/white" />

        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>