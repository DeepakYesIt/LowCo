<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_15sdp"
    android:layout_margin="@dimen/_5sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">



        <androidx.cardview.widget.CardView
            android:id="@+id/CVForMainImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:cardCornerRadius="@dimen/_10sdp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_10sdp">
        <ImageView
            android:id="@+id/tvProfile"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_85sdp"
            android:src="@drawable/pic1"
            android:scaleType="centerCrop"
           />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvConsumerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stacia R Hofmann"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_10sdp" />



            <RelativeLayout
                android:id="@+id/appliedDateRl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                >
                <ImageView
                    android:id="@+id/calenderPic"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:src="@drawable/calender_vector"
                    />
                <TextView
                    android:id="@+id/tvDeniedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="April 28, 2024"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="#424242"
                    android:fontFamily="@font/lexend_deca"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@id/calenderPic"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/appliedTimeRl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                >
                <ImageView
                    android:id="@+id/clockPic"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/clock_vector"
                    />
                <TextView
                    android:id="@+id/tvDeniedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30am"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="#424242"
                    android:fontFamily="@font/lexend_deca"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@id/clockPic"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/locationRl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                >
                <ImageView
                    android:id="@+id/locationPic"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/location_away"
                    />
                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500 meters away"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="#424242"
                    android:fontFamily="@font/lexend_deca"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@id/locationPic"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layRequest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp">

                <TextView
                    android:id="@+id/btnRequest"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/orange_button_identity"
                    android:fontFamily="@font/lexend_deca"
                    android:gravity="center"
                    android:text="View Request"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>