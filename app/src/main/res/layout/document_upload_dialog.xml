<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Root -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/card_request_bg"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_gravity="center|end"
            android:background="@drawable/crosh_bottom"
            android:layout_height="wrap_content"/>
       <ImageView
           android:layout_width="@dimen/_80sdp"
           android:layout_gravity="center"
           android:background="@drawable/viewheader"
           android:layout_height="@dimen/_5sdp"/>
        <!-- Card Holder -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Document Verification"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_15ssp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="To verify your document, please choose one of the options below"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_10ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="start"
            android:background="@drawable/card_request_send"
            android:fontFamily="@font/lexend_deca_light"
            android:padding="@dimen/_8sdp">
            <TextView
                android:id="@+id/layWithOutDocument"
                android:layout_width="match_parent"
                android:hint="Personal Information (SSN)"
                android:background="@null"
                android:textSize="@dimen/_10sdp"
                android:gravity="start"
                android:drawablePadding="@dimen/_2sdp"
                android:drawableEnd="@drawable/select_box"
                android:fontFamily="@font/montserrat_medium"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="start"
            android:background="@drawable/card_request_send"
            android:fontFamily="@font/lexend_deca_light"
            android:padding="@dimen/_8sdp">
            <TextView
                android:id="@+id/layDocument"
                android:layout_width="match_parent"
                android:hint="Government ID, Selfie &amp; Documents"
                android:background="@null"
                android:textSize="@dimen/_10sdp"
                android:gravity="start"
                android:drawablePadding="@dimen/_2sdp"
                android:drawableEnd="@drawable/unselect_box"
                android:fontFamily="@font/montserrat_medium"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <!-- Button -->
        <LinearLayout
            android:id="@+id/btnShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_15sdp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="@dimen/_2sdp">
            <TextView
                android:id="@+id/Cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"
                android:text="Cancel"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:gravity="center"
                android:textSize="@dimen/_13ssp"
                android:background="@drawable/orange_button_ring"/>

            <TextView
                android:id="@+id/yes"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:textStyle="bold"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="Okay"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/white"
                android:background="@drawable/orange_button_identity"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
