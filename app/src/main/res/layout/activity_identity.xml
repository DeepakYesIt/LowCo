<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activity.IdentityActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_110sdp"
        app:layout_constraintBottom_toTopOf="@id/welcomeText"
        android:src="@drawable/splash_icon" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:text="WELCOME!"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/_50sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:textSize="@dimen/_38sdp" />


    <TextView
        android:id="@+id/signUptext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Sign Up as"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_23sdp" />

    <LinearLayout
        android:id="@+id/rlConsumer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@id/signUptext"
        android:background="@drawable/white_button_identity"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageConsumer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person_shape" />

        <TextView
            android:id="@+id/textConsumer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:text="Consumer"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:padding="@dimen/_4sdp"/>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlAttorney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:background="@drawable/white_button_identity"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/rlConsumer">

        <ImageView
            android:id="@+id/imageAttorney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/attorney_black" />

        <TextView
            android:id="@+id/textAttorney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageAttorney"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Attorney"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>