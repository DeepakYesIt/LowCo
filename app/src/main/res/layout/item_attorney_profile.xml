<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginHorizontal="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_12sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardElevation="@dimen/_2sdp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_12sdp"
        android:gravity="center_vertical">

        <!-- Profile Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_73sdp"
            android:layout_height="@dimen/_82sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="0dp"
            android:elevation="0dp">


        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/empty_profile_icon"
            android:scaleType="fitXY" />

        </androidx.cardview.widget.CardView>

        <!-- Profile Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_12sdp">

            <TextView
                android:id="@+id/tvAttorneyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Devon M. Thurtle Anderson"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvAttorneyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adoption Attorney"
                android:fontFamily="@font/lexend_deca"
                android:textColor="#424242"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_4sdp"
                android:maxLines="1"
                android:ellipsize="end" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageLocationIcon"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/location_red"
                    app:tint="#231F39" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seattle, WA"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_toEndOf="@+id/imageLocationIcon"
                    android:fontFamily="@font/lexend_deca"
                    android:textColor="#424242"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_4sdp" />

            </RelativeLayout>

            <!-- Action Button -->
            <TextView
                android:id="@+id/btnClaimProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Claim This Profile"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_8sdp"
                android:textSize="@dimen/_9ssp"
                android:background="@drawable/orange_button_identity"
                android:paddingHorizontal="@dimen/_12sdp"
                android:paddingVertical="@dimen/_4sdp"
                android:gravity="center" />

            <!-- Claimed Badge (Hidden by default) -->
            <TextView
                android:id="@+id/tvClaimedBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Claimed"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/white"
                android:textSize="@dimen/_9ssp"
                android:background="@drawable/claimed_bg"
                android:paddingHorizontal="@dimen/_12sdp"
                android:paddingVertical="@dimen/_4sdp"
                android:gravity="center"
                android:visibility="gone" />

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>