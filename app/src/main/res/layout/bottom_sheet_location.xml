        <!--        app:loader_firstShadowColor="@color/grey"-->
        <!--        app:loader_secondShadowColor="@color/grey"-->
        <!--        app:loader_selectedColor="@color/red"-->
        <!--        app:loader_showRunningShadow="true" />-->


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

