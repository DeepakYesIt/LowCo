<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="commonViewModel"
            type="com.business.lawco.networkModel.common.CommonViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".fragment.attronyfragment.completeprofile.CompleteProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:src="@drawable/splash_icon" />

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/white_layout"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Icon">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profilePic"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:background="@drawable/profile_orange_circle"
                        android:padding="@dimen/_1sdp"
                        android:src="@drawable/untitled"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/upload"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/white_circle"
                        android:elevation="@dimen/_400sdp"
                        app:cardCornerRadius="@dimen/_30sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.60"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.95">

                        <ImageView
                            android:id="@+id/uploadIcon"
                            android:layout_width="@dimen/_9sdp"
                            android:layout_height="@dimen/_9sdp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/upload_vector" />
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Complete Profile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_24sdp"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/detailBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:id="@+id/NameBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/editext_bg">

                        <ImageView
                            android:id="@+id/NameIv"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/vector_bg"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/name_vector" />

                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:layout_toEndOf="@+id/NameIv"
                            android:background="@null"
                            android:fontFamily="@font/montserrat"
                            android:hint="Full Name"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/emailBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/NameBox"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/editext_bg">

                        <ImageView
                            android:id="@+id/emailIv"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/vector_bg"
                            android:padding="@dimen/_13sdp"
                            android:src="@drawable/email_vector" />
                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_toEndOf="@+id/emailIv"
                            android:layout_toStartOf="@id/layEmail"
                            android:background="@null"
                            android:editable="false"
                            android:fontFamily="@font/lexend_deca_light"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"/>
                        <LinearLayout
                            android:id="@+id/layEmail"
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/emailVerify"
                                android:layout_width="wrap_content"
                                android:src="@drawable/verifyicon"
                                android:visibility="gone"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/emailVerifyClick"
                                android:layout_width="wrap_content"
                                android:src="@drawable/verifyclick"
                                android:visibility="gone"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/phoneBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/emailBox"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/editext_bg">

                        <ImageView
                            android:id="@+id/phoneIv"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/vector_bg"
                            android:padding="@dimen/_11sdp"
                            android:src="@drawable/phone_vector" />
                        <EditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_toStartOf="@id/layPhone"
                            android:layout_toEndOf="@+id/phoneIv"
                            android:background="@null"
                            android:editable="false"
                            android:maxLength="10"
                            android:fontFamily="@font/lexend_deca_light"
                            android:hint="@string/preferred_phone_number"
                            android:inputType="phone"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"/>
                        <LinearLayout
                            android:id="@+id/layPhone"
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/phoneVerify"
                                android:layout_width="wrap_content"
                                android:src="@drawable/verifyicon"
                                android:visibility="gone"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/phoneVerifyClick"
                                android:layout_width="wrap_content"
                                android:src="@drawable/verifyclick"
                                android:visibility="gone"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/locationBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/phoneBox"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/editext_bg">

                        <ImageView
                            android:id="@+id/locationIv"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/vector_bg"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/location_pin" />

                        <TextView
                            android:id="@+id/etLocation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|start"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:layout_toEndOf="@+id/locationIv"
                            android:background="@null"
                            android:fontFamily="@font/montserrat"
                            android:hint="Location"
                            android:inputType="textPostalAddress"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/areaBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/locationBox"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/editext_bg">

                        <ImageView
                            android:id="@+id/areaIv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/vector_bg"
                            android:padding="@dimen/_11sdp"
                            android:src="@drawable/area_of_practice" />

                        <TextView
                            android:id="@+id/etAreaOfPractice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:layout_toEndOf="@+id/areaIv"
                            android:background="@null"
                            android:drawableEnd="@drawable/ic_arrow"
                            android:fontFamily="@font/montserrat"
                            android:hint="Area of Practice"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/registerNumberBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/areaBox"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/editext_bg">

                        <ImageView
                            android:id="@+id/registerNumberIv"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/vector_bg"
                            android:padding="@dimen/_11sdp"
                            android:src="@drawable/register_number" />

                        <EditText
                            android:id="@+id/etRegistrationNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_13sdp"
                            android:layout_toEndOf="@+id/registerNumberIv"
                            android:background="@null"
                            android:maxLength="6"
                            android:fontFamily="@font/montserrat"
                            android:hint="Attorney Registration Number"
                            android:inputType="numberDecimal"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/About"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_75sdp"
                        android:layout_below="@id/registerNumberBox"
                        android:layout_marginTop="@dimen/_5sdp"

                        android:background="@drawable/about_bg">


                        <EditText
                            android:id="@+id/etAbout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="22dp"
                            android:layout_marginBottom="8dp"
                            android:background="@null"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:hint="About"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/black"
                            android:inputType="textMultiLine"
                            android:maxLines="4" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relAreaOfPractice"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_400sdp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_260sdp"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/dialog_box_bg"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <EditText
                                android:id="@+id/edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:background="@android:drawable/editbox_background"
                                android:hint="Search..."
                                android:padding="12dp"
                                android:singleLine="true" />


                            <ListView
                                android:id="@+id/list_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>
                    </RelativeLayout>


                </RelativeLayout>

                <TextView
                    android:id="@+id/btSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_40sdp"
                    android:background="@drawable/orange_button_identity"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

