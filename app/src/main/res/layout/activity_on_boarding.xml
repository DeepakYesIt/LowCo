<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".activity.OnBoardingActivity">


    <ImageView
        android:id="@+id/imageBackOnBoarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_button_vector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_380sdp"
        app:layout_constraintBottom_toTopOf="@+id/tabLayoutForIndicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBackOnBoarding" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutForIndicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_18sdp"
        android:gravity="center"
        app:tabBackground="@drawable/tab_pager_selector"
        app:tabGravity="center"
        android:background="@color/trans"
        app:tabIndicatorHeight="0dp"
        app:tabPaddingEnd="@dimen/_8sdp"
        app:tabPaddingStart="@dimen/_8sdp"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@id/textBtnNext"
        app:layout_constraintTop_toBottomOf="@id/viewpager" />

    <TextView
        android:id="@+id/textBtnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_95sdp"
        android:layout_marginEnd="@dimen/_95sdp"
        android:background="@drawable/orange_button_identity"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:paddingTop="@dimen/_6sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>