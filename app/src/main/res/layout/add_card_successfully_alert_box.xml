<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_270sdp"
    android:layout_height="@dimen/_300sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="@drawable/dialog_box_bg"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="25dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/successfully_add_vector" />

        <TextView
            android:id="@+id/addtv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:text="@string/your_card_has_been_added_successfully"
            android:textColor="#000000"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/addtv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/lexend_deca"
            android:gravity="center"
            android:text="Lorem ipsum dolor sit amet, consecte
tuer adipiscing elit. Aenean commod
o ligula eget dolor."
            android:textAlignment="center"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/btn_okay1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_65sdp"
            android:layout_marginTop="@dimen/_22sdp"
            android:layout_marginRight="@dimen/_65sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/orange_button_identity"
            android:gravity="center"
            android:text="Ok"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_14sdp" />

    </LinearLayout>


</androidx.cardview.widget.CardView>