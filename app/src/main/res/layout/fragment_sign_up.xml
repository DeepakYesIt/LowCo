<?xml version="1.0" encoding="utf-8"?>
<layout>
        <data>
            <import type="android.view.View"/>

            <variable
                name="SignUpViewModel"
                type="com.business.lawco.networkModel.signUp.SignUpViewModel" />
        </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        tools:context=".fragment.authfragment.signup.SignUpFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:src="@drawable/splash_icon" />


                <LinearLayout
                    android:id="@+id/llWhiteLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:background="@drawable/white_layout"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Icon">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_44sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Sign Up"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_24sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <RelativeLayout
                        android:id="@+id/rlDetailBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:id="@+id/rlNameBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:background="@drawable/editext_bg">

                            <ImageView
                                android:id="@+id/imageName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@drawable/vector_bg"
                                android:paddingLeft="@dimen/_11sdp"
                                android:paddingTop="@dimen/_11sdp"
                                android:paddingRight="@dimen/_11sdp"
                                android:paddingBottom="@dimen/_11sdp"
                                android:src="@drawable/name_vector" />

                            <EditText
                                android:id="@+id/etName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_toEndOf="@+id/imageName"
                                android:background="@null"
                                android:fontFamily="@font/montserrat"
                                android:hint="Enter your name"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlEmailBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rlNameBox"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:background="@drawable/editext_bg">

                            <ImageView
                                android:id="@+id/imageEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@drawable/vector_bg"
                                android:paddingLeft="@dimen/_11sdp"
                                android:paddingTop="@dimen/_11sdp"
                                android:paddingRight="@dimen/_11sdp"
                                android:paddingBottom="@dimen/_11sdp"
                                android:src="@drawable/mail_vector" />

                            <EditText
                                android:id="@+id/etEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_toEndOf="@+id/imageEmail"
                                android:background="@null"
                                android:fontFamily="@font/montserrat"
                                android:hint="Enter your email/phone"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/rlPasswordBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rlEmailBox"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/editext_bg">

                            <ImageView
                                android:id="@+id/imagePassword"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@drawable/vector_bg"
                                android:padding="@dimen/_10sdp"
                                android:paddingLeft="@dimen/_11sdp"
                                android:paddingTop="@dimen/_11sdp"
                                android:paddingRight="@dimen/_11sdp"
                                android:paddingBottom="@dimen/_11sdp"
                                android:src="@drawable/password_vector" />

                            <EditText
                                android:id="@+id/etPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_toStartOf="@+id/eyeHide"
                                android:layout_toEndOf="@+id/imagePassword"
                                android:background="@null"
                                android:fontFamily="@font/montserrat"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />

                            <LinearLayout
                                android:id="@+id/eyeHide"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true">

                                <ImageView
                                    android:id="@+id/imgShowPass"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:background="@drawable/eye_show_vector"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/imgHidePass"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_12sdp"
                                    android:background="@drawable/eye_icon_show"
                                    android:visibility="visible" />
                            </LinearLayout>

                        </RelativeLayout>


                    </RelativeLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/termAndCondition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"

                        android:layout_marginTop="@dimen/_10sdp"

                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:buttonTint="#F0642C"
                            android:checked="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="1.4"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/textTermAndCondition"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textTermAndCondition"
                            android:layout_width="@dimen/_210sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lexend_deca"
                            android:text="@string/by_signing_up_you_agree_to_our_term_amp_condition"
                            android:textAlignment="center"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:id="@+id/btSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_40sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/orange_button_identity"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:paddingTop="@dimen/_11sdp"
                        android:paddingBottom="@dimen/_11sdp"
                        android:text="Sign Up"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp" />
                    <TextView
                        android:id="@+id/or"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center_horizontal"
                        android:text="-OR-" />
                    <TextView
                        android:id="@+id/singupwith"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:fontFamily="@font/lexend_deca"
                        android:gravity="center_horizontal"
                        android:text="Sign Up with"
                        android:textSize="@dimen/_13ssp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/btGoogleSignIn"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/g_bg">

                            <ImageView
                                android:id="@+id/imageG"
                                android:layout_width="@dimen/_11sdp"
                                android:layout_height="@dimen/_11sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/g_vector" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlFBox"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/f_bg">

                            <ImageView
                                android:id="@+id/imageF"
                                android:layout_width="@dimen/_11sdp"
                                android:layout_height="@dimen/_11sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/f_vector" />
                        </RelativeLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/footer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center_horizontal"
                        android:paddingBottom="@dimen/_20sdp">

                        <TextView
                            android:id="@+id/textAlreadyHaveAccount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:fontFamily="@font/lexend_deca"
                            android:text="@string/already_have_an_account"
                            android:textSize="@dimen/_12ssp" />


                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

        </ScrollView>

