<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/_20sdp"
    android:background="@drawable/credit_shape_bg">


    <androidx.cardview.widget.CardView
        android:id="@+id/CVForMainImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/tvProfile"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_85sdp"
            android:scaleType="fitXY"
            android:src="@drawable/pic1" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvConsumerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Stacia R Hofmann"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp" />
        <TextView
            android:id="@+id/tvNeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/lexend_deca"
            android:text=""
            android:textSize="@dimen/_10ssp"
            />
        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/lexend_deca"
            android:text="200 meters away"
            android:textColor="@color/black"
            android:drawableStart="@drawable/location_away"
            android:drawablePadding="@dimen/_3sdp"
            android:textSize="@dimen/_10ssp" />
        <TextView
            android:id="@+id/btView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/orange_button_identity"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:text="View Details"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp" />
    </LinearLayout>
</LinearLayout>