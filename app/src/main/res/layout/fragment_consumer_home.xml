<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="consumerHomeScreenViewModel"
            type="com.business.lawco.networkModel.homeScreen.consumer.ConsumerHomeScreenViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent"
        tools:context=".fragment.consumerfragment.consumerhome.ConsumerHomeFragment">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewforAttorneyPrevious"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_67sdp"
            android:layout_marginRight="@dimen/_50sdp"
            android:visibility="gone"
            app:layout_constraintHeight_max="@dimen/_120sdp"
            app:layout_constraintHeight_min="@dimen/_38sdp"
            app:layout_constraintRight_toRightOf="@+id/layEdit"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="NotSibling">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerAttorneySearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbarSize="@dimen/_5sdp"
                    android:scrollbarThumbVertical="@color/orange"
                    android:scrollbarTrackVertical="@color/line"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/item_view" />
                <TextView
                    android:id="@+id/tv_noData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:text="No Data Found"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CLHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dark_blue_bg"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_3sdp"
            app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                android:id="@+id/header1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">
                <RelativeLayout
                    android:id="@+id/btnCurrentLocation"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvCurrentLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/location_red"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/normal_text"
                        android:maxLines="1"
                        android:layout_alignParentStart="true"
                        android:text=""
                        android:maxLength="35"
                        android:gravity="center|start"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        android:drawableEnd="@drawable/dropdown" />
                </RelativeLayout>
                <ImageView
                    android:id="@+id/btnNotification"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:src="@drawable/notification_icon" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/search_white_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/btFilter"
                app:layout_constraintTop_toBottomOf="@+id/header1">
                <EditText
                    android:id="@+id/EtSearch"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@null"
                    android:fontFamily="@font/lexend_deca_light"
                    android:hint="Search an Attorney"
                    android:inputType="textNoSuggestions"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textAlignment="textStart"
                    android:textColor="#333333"
                    android:textSize="@dimen/_12ssp" />
                <RelativeLayout
                    android:id="@+id/search_id"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:id="@+id/item_menu_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/search_bar" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btFilter"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_14sdp"
                android:background="@drawable/filter_orange_bg"
                android:paddingLeft="@dimen/_7sdp"
                android:paddingTop="@dimen/_9sdp"
                android:paddingRight="@dimen/_7sdp"
                android:paddingBottom="@dimen/_9sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/filter_vector" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/consumerHomeRefresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CLHeader">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CLHeader">
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:fillViewport="true"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/TextCategories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Categories"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14ssp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                            <TextView
                                android:id="@+id/btViewAllCategory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="View all"
                                android:textColor="@color/orange_dark"
                                android:textSize="@dimen/_12ssp"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/RcvCategories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintTop_toBottomOf="@+id/TextCategories"
                            tools:listitem="@layout/catogeries_item" />
                        <TextView
                            android:id="@+id/textConnectwithattorneys"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Connect with one or more Attorneys near you."
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp"
                            app:layout_constraintTop_toBottomOf="@+id/RcvCategories" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textConnectwithattorneys">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/RcvListOfAttorney"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_5sdp"
                                tools:itemCount="5"
                                tools:listitem="@layout/list_of_attorney_item" />
                            <TextView
                                android:id="@+id/textNoDataFound"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="No Data Found"
                                android:gravity="center"
                                android:visibility="gone"
                                android:textColor="@color/orange_dark"
                                android:layout_gravity="center"
                                android:fontFamily="@font/montserrat_semibold"
                                android:layout_centerInParent="true"
                                android:textAlignment="center" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>