<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="consumerHomeScreenViewModel"
            type="com.business.lawco.networkModel.homeScreen.consumer.ConsumerHomeScreenViewModel" />

    </data>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.consumerfragment.connections.ConnectionsFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/dark_blue_bg">

        <ImageView
            android:id="@+id/imageBackArrow"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:background="@drawable/arrow_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />



        <TextView
            android:id="@+id/textConnectionAttorney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connections"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="@dimen/_16ssp"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/search_white_bg"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            app:layout_constraintTop_toBottomOf="@+id/textConnectionAttorney"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btFilter"
            app:layout_constraintBottom_toBottomOf="parent">
            <EditText
                android:id="@+id/EtSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@null"
                android:singleLine="true"
                android:fontFamily="@font/lexend_deca_light"
                android:hint="@string/search_an_attorney"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textAlignment="textStart"
                android:textColor="#333333"
                android:textSize="@dimen/_12ssp" />


            <RelativeLayout
                android:id="@+id/item_clear_click_parent"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/search_id"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/item_clear_icon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/cross_like"
                    app:tint="#090000" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/search_id"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:id="@+id/item_menu_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/search_bar" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:background="@drawable/filter_orange_bg"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingTop="@dimen/_9sdp"
            android:paddingRight="@dimen/_7sdp"
            android:paddingBottom="@dimen/_9sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textConnectionAttorney">

            <ImageView
                android:id="@+id/imageFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/filter_vector" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/Header"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/layRequested"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Requested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Requested"
                    android:layout_gravity="start"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_15sdp" />
                <View
                    android:id="@+id/RequestedLine"
                    android:layout_width="@dimen/_43sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/orange"
                    android:visibility="visible" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layAccepted"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/Accepted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Accepted"
                    android:layout_gravity="start"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/_15sdp" />
                <View
                    android:id="@+id/acceptLine"
                    android:layout_width="@dimen/_43sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/orange"
                    android:layout_gravity="start"
                    android:visibility="gone" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layDeclined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Declined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Declined"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/_15sdp"
                    />
                <View
                    android:id="@+id/deniedLine"
                    android:layout_width="@dimen/_43sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:background="@color/orange"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_5sdp" />
            </LinearLayout>
        </LinearLayout>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/connectionRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/Header"
                app:layout_constraintBottom_toBottomOf="parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvConnectionList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:itemCount="5"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    tools:listitem="@layout/connections_list" />
                <TextView
                    android:id="@+id/textNoDataFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Data Found"
                    android:textColor="@color/orange_dark"
                    android:visibility="gone"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_centerInParent="true"
                    android:textAlignment="center" />
            </RelativeLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>
</LinearLayout>
</layout>