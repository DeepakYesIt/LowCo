<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="commonViewModel"
            type="com.business.lawco.networkModel.common.CommonViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:src="@drawable/splash_icon" />

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:background="@drawable/white_layout"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Icon">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profilePic"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:background="@drawable/profile_orange_circle"
                        android:padding="@dimen/_1sdp"
                        android:src="@drawable/untitled"
                        android:layout_marginTop="@dimen/_20ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <RelativeLayout
                        android:id="@+id/detailBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:id="@+id/NameBox"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/editext_bg">

                            <ImageView
                                android:id="@+id/NameIv"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_centerVertical="true"
                                android:background="@drawable/vector_bg"
                                android:padding="@dimen/_10sdp"
                                android:src="@drawable/name_vector" />

                            <EditText
                                android:id="@+id/etName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_13sdp"
                                android:layout_toEndOf="@+id/NameIv"
                                android:background="@null"
                                android:editable="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:cursorVisible="false"
                                android:longClickable="false"
                                android:textIsSelectable="false"
                                android:fontFamily="@font/montserrat"
                                android:hint="Full Name"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/emailBox"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_below="@+id/NameBox"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/editext_bg">

                            <ImageView
                                android:id="@+id/emailIv"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_centerVertical="true"
                                android:background="@drawable/vector_bg"
                                android:padding="@dimen/_13sdp"
                                android:src="@drawable/email_vector" />
                            <EditText
                                android:id="@+id/etEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_toEndOf="@+id/emailIv"
                                android:layout_toStartOf="@id/layEmail"
                                android:background="@null"
                                android:editable="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:cursorVisible="false"
                                android:longClickable="false"
                                android:textIsSelectable="false"
                                android:fontFamily="@font/lexend_deca_light"
                                android:hint="@string/email"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"/>
                            <LinearLayout
                                android:id="@+id/layEmail"
                                android:layout_width="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/emailVerify"
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/verifyicon"
                                    android:visibility="gone"
                                    android:layout_height="wrap_content"/>
                                <ImageView
                                    android:id="@+id/emailVerifyClick"
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/verifyclick"
                                    android:visibility="gone"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/phoneBox"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_below="@+id/emailBox"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/editext_bg">

                            <ImageView
                                android:id="@+id/phoneIv"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_centerVertical="true"
                                android:background="@drawable/vector_bg"
                                android:padding="@dimen/_11sdp"
                                android:src="@drawable/phone_vector" />
                            <EditText
                                android:id="@+id/etPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_toStartOf="@id/layPhone"
                                android:layout_toEndOf="@+id/phoneIv"
                                android:background="@null"
                                android:editable="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:cursorVisible="false"
                                android:longClickable="false"
                                android:textIsSelectable="false"
                                android:maxLength="10"
                                android:fontFamily="@font/lexend_deca_light"
                                android:hint="@string/preferred_phone_number"
                                android:inputType="phone"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"/>
                            <LinearLayout
                                android:id="@+id/layPhone"
                                android:layout_width="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/phoneVerify"
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/verifyicon"
                                    android:visibility="gone"
                                    android:layout_height="wrap_content"/>
                                <ImageView
                                    android:id="@+id/phoneVerifyClick"
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/verifyclick"
                                    android:visibility="gone"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/locationBox"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_below="@+id/phoneBox"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/editext_bg">

                            <ImageView
                                android:id="@+id/locationIv"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_centerVertical="true"
                                android:background="@drawable/vector_bg"
                                android:padding="@dimen/_10sdp"
                                android:src="@drawable/location_pin" />

                            <TextView
                                android:id="@+id/etLocation"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_13sdp"
                                android:layout_toEndOf="@+id/locationIv"
                                android:background="@null"
                                android:fontFamily="@font/montserrat"
                                android:hint="Location"
                                android:inputType="textPostalAddress"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/areaBox"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_below="@+id/locationBox"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/editext_bg">

                            <ImageView
                                android:id="@+id/areaIv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@drawable/vector_bg"
                                android:padding="@dimen/_11sdp"
                                android:src="@drawable/area_of_practice" />

                            <TextView
                                android:id="@+id/etAreaOfPractice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_13sdp"
                                android:layout_toEndOf="@+id/areaIv"
                                android:background="@null"
                                android:fontFamily="@font/montserrat"
                                android:hint="Area of Practice"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relAreaOfPractice"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_400sdp"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_260sdp"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:background="@color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/dialog_box_bg"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <EditText
                                    android:id="@+id/edit_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:background="@android:drawable/editbox_background"
                                    android:hint="Search..."
                                    android:padding="12dp"
                                    android:singleLine="true" />


                                <ListView
                                    android:id="@+id/list_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </LinearLayout>
                        </RelativeLayout>


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/btSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_40sdp"
                        android:layout_marginBottom="@dimen/_40sdp"
                        android:background="@drawable/orange_button_identity"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="Proceed"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp" />


                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>