<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    android:layout_marginHorizontal="@dimen/_10sdp"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="25dp"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="@drawable/dialog_box_bg">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    android:paddingHorizontal="@dimen/_23sdp"
    android:paddingVertical="@dimen/_23sdp">

    <ImageView
        android:layout_width="@dimen/_54sdp"
        android:layout_height="@dimen/_43sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/ic_verification_vector"
        android:layout_marginBottom="@dimen/_20sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Verify Your Identity to Claim This Profile"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:layout_marginBottom="@dimen/_9sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Claiming a profile requires identity and license verification before approval. This helps ensure accuracy, trust, and compliance with professional standards."
        android:fontFamily="@font/lexend_deca_light"
        android:textColor="#333333"
        android:textSize="@dimen/_11ssp"
        android:textAlignment="center"
        android:lineHeight="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp">

        <TextView
            android:id="@+id/textCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_2sdp"
            android:paddingHorizontal="@dimen/_28sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="Cancel"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:background="@drawable/orange_button_ring"/>

        <TextView
            android:id="@+id/textProceed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_2sdp"
            android:paddingHorizontal="@dimen/_28sdp"
            android:layout_alignParentEnd="true"
            android:text="Proceed"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/white"
            android:background="@drawable/orange_button_identity"
            />


    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>