<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        tools:context=".fragment.authfragment.signupverification.SignUpVerificationFragment">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_button_vector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageBack">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/splash_icon"
                    app:layout_constraintTop_toTopOf="parent"

                    />

                <LinearLayout
                    android:id="@+id/llBody"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginTop="@dimen/_40sdp"
                    android:background="@drawable/white_layout"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Icon">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_44sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:text="Verification Code"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_24sdp"/>


                    <TextView
                        android:id="@+id/textDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_22sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:fontFamily="@font/lexend_deca"
                        android:text="Enter the verification code sent to your registered email/phone."
                        android:textAlignment="center"
                        android:textColor="#424242"
                        android:textSize="@dimen/_14ssp" />


                    <RelativeLayout
                        android:id="@+id/rlOtpBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:id="@+id/rlOtbBody"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center_horizontal">

                            <com.ozcanalasalvar.otp_view.view.OtpView
                                android:id="@+id/OtpView"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginTop="10dp"
                                app:activeColor="#FF5722"
                                app:autoFocusEnabled="false"
                                app:digits="4"
                                app:passiveColor="#80FF5722"
                                app:textColor="#FFFFFF"
                                app:textSize="22" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_28sdp"
                        android:layout_marginEnd="@dimen/_35sdp"
                        android:background="@drawable/orange_button_identity"
                        android:gravity="center"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="Submit"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/white" />


                    <RelativeLayout
                        android:id="@+id/rlDidntReceiveOtp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/textDidntReceive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lexend_deca"
                            android:text="@string/didn_t_receive_the_verification_code"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:id="@+id/textResend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_toEndOf="@+id/textDidntReceive"
                            android:text="@string/resend"
                            android:fontFamily="@font/lexend_deca"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/_11ssp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/rlResendLine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center_horizontal"
                            android:paddingBottom="@dimen/_50sdp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textResendotp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lexend_deca"
                                android:text="Resend verification code in"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13ssp" />

                            <TextView
                                android:id="@+id/textTimeResend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_toEndOf="@+id/textResendotp"
                                android:text="00:00"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/_13ssp" />
                        </RelativeLayout>


                        <TextView
                            android:id="@+id/incorrectOtp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:gravity="center_horizontal"
                            android:fontFamily="@font/lexend_deca"
                            android:paddingBottom="@dimen/_50sdp"
                            android:text="Incorrect verification code, please try again!"
                            android:textAlignment="center"
                            android:textColor="@color/red_verification"
                            android:visibility="gone" />

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>


        </ScrollView>

        <!--        <com.agrawalsuneet.dotsloader.loaders.CircularDotsLoader-->
